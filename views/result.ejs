<body>
  <main>
    <!------ Today's Forecast ------->
    <section class="container">
      <div class="site-title">
        <h2>TODAY'S FORECAST</h2>
        <p><%= date %></p>
      </div>
      <div class="today">
        <span>This is where the day's forecast bar will go.</span>
      </div>
    </section>
    <!----X--Today's Forecast ---X-->

    <!------ MID CONTENT -------->
    <section class="container">

      <div class="site-content">
        <!----- weather data ------>
        <aside class="sidebar">
          <div class="weather-data">
            <h2>Weather Data Sidebar</h2>
            <h3><%=City%></h3>
            <p> <%=Description.substring(0,400)%> <a href="">Read more ....</a> </p>

            <%- include('components/CurrentWeather',{day: Today, aqi :airQualityIndex}) -%>
          </div>
        </aside>
        <!--X-- weather data ---X-->
        <!------ weather map ------->
        <div class="weather-map">
          <h2>Weather Map</h2>
          <div id="myMap"></div>
        </div>
        <!-- X--- weather map ----X -->
      </div>
    </section>
    <!--X--- MID CONTENT ----X--->
<hr>
    <!----- 5 day forcast ------>
    <section>
      <div class="container text-center">
      <h2>5 Day Forecast</h2>
        <div class="card-group">

          <% for(var i = 1 ; i<6; i++){  %>
          <%- include('components/forecastCard',{day: Daily[i]}); -%>
          <%} %>

        </div>
      </div>
    </section>
    <!--X-- 5 day forcast ---X-->
<hr>
    <div class="container">
      <div class="card-group">

      <% for(var i = 1 ; i<6; i++){  %>
       <%- include('components/forecastCard',{day: Daily[i]}); -%>
      <%} %>

      </div>
    </div>


  </main>
