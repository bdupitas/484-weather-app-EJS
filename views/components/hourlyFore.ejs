        <div class="col">
            <!-- builds a time doc -->
            <%= new Date((hour.dt+Offset)*1000).getUTCHours()+ ":00" %>
        </div>
        <div class="col">
            <!-- gets the temperature in faranheight -->
            <strong> <%= hour.temp.toFixed(0) +"Â° F"%> </strong>
        </div>
        <div class="col">
            <!-- loads a picture about the weather that hour -->
            <img class="weather-icon-hourly ml-auto"
                src="http://openweathermap.org/img/wn/<%= hour.weather[0].icon %>@2x.png" alt="">
        </div>
</li>