<%- include('partials/header'); -%>
<%- include('partials/navbar'); -%>



<div class="jumbotron">
    <h1 class="display-4">Welcome to our Weather App</h1>
    <p class="lead">Please navigate to the function that you desire.</p>
    <hr class="my-4">

    <p class="lead">
      <button class="btn btn-primary btn-lg" type="button" role="button" data-toggle="collapse" data-target="#collapseZip" aria-expanded="false" aria-controls="collapseZip">Search by Zipcode</button>
      <button class="btn btn-primary btn-lg" type="button" role="button" data-toggle="collapse" data-target="#collapseCity" aria-expanded="false" aria-controls="collapseCity">Search by City</button>
    </p>
    <div class="collapse" id="collapseZip">
      <div class="card card-body">
        <form action="/zipcode" method="post" class="form-control-lg form-inline mx-auto">
          <label for="zipcode"></label>
          <input type="text" class="form-control mb-2 mr-sm-2" placeholder="Enter Zipcode here" name="zipcode" min="00501" max="99950"  minlength="5" maxlength="5" required>
          <button class="btn btn-primary mb-2" type="submit" name="button">Search</button>
        </form>
      </div>
    </div>

  <p class="lead">
      <button class="btn btn-warning btn-lg" type="button" role="button" data-toggle="collapse" data-target="#collapseCity" aria-expanded="false" aria-controls="collapseZip">Search by City</button>
    </p>
   <div class="collapse" id="collapseCity">
       <div class="card card-body">
         <form action="/city" method="post" class="form-control-lg form-inline mx-auto">
           <label for="City"></label>
           <input type="text" class="form-control mb-2 mr-sm-2" placeholder="City" name="City" required>
           <button class="btn btn-primary mb-2" type="submit" name="button">Submit</button>
         </form>
       </div>
    </div>
    
</div>



<%- include('partials/footer'); -%>
